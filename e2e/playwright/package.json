{
    "name": "plugin-e2e-tests",
    "scripts": {
        "test": "playwright test",
        "test-ci": "PW_HEADLESS=true npm test",
        "test-slomo": "npm run test-slomo --prefix ../../../mattermost/e2e-tests/playwright -- --project=chrome --config='../../../mattermost-plugin-todo/e2e/playwright/playwright.config.ts",
        "debug": "npm test -- --debug",
        "show-report": "npm run show-report --prefix ../../../mattermost/e2e-tests/playwright",
        "lint": "eslint --ignore-pattern node_modules --ignore-pattern dist --ext .js  --ext ts . --quiet --cache",
        "lint:fix": "eslint --ignore-pattern node_modules --ignore-pattern dist --ext .js  --ext ts . --quiet --cache --fix",
        "tsc": "tsc"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "~5.59.0",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@types/node": "^20.11.24",
        "mattermost-plugin-e2e-test-utils": "https://github.com/mattermost-community/mattermost-plugin-e2e-test-utils.git#f073874fa4941333c5e540943749aa03f7c32bf2"
    }
}
